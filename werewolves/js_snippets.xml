        <SnippetType>SurroundsWithStatement</SnippetType>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>comment</ID>
          <ToolTip>The comment you want to make.</ToolTip>
          <Default>Comment_goes_here</Default>
        </Literal>
      </Declarations>
      <Code Language="Javascript">
  <![CDATA[$ $
